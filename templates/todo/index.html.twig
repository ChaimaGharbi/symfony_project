<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.css') }}">
    <title>Todos</title>
</head>
<body>
{% for key, message in app.session.flashBag.all()  %}
    <div class="alert alert-{{ key }}" style="position: absolute; top: 5px; opacity: 0.6; left: 40%; height: 3rem">
        {% for msg in message %}
            {{ msg|join(', ') }}
        {% endfor %}
    </div>
{% endfor %}
<div class="container">
    <h1>Liste des Todos: </h1>
    <ol class="list-group" style="width: 50vw; margin: 0 auto">
        {% for name, content in app.session.get('todos') %}
            <li class="list-group-item">
                {{ name }} : {{ content }}
            </li>
        {% endfor %}
    </ol>
</div>
</body>
</html>
